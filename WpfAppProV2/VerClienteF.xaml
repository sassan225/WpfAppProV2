<Window
    x:Class="WpfAppProV2.VerClienteF"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Clientes Frecuentes"
    Width="800"
    Height="500"
    Background="Transparent"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border CornerRadius="20">
        <Border.Background>
            <ImageBrush ImageSource="/sources/backOf.jpg" />
        </Border.Background>

        <Border
            BorderThickness="10"
            CornerRadius="20"
            Opacity="0.9">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="#1a8586" />
                    <GradientStop Offset="0.3" Color="#B8C97A" />
                    <GradientStop Offset="0.7" Color="#D7E2B8" />
                    <GradientStop Offset="1" Color="#1a8586" />
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Offset="0" Color="#eaeace" />
                    <GradientStop Offset="0.3" Color="#c5cf8a" />
                    <GradientStop Offset="0.7" Color="#f3f3f3" />
                    <GradientStop Offset="1" Color="#c5cf8a" />
                </LinearGradientBrush>
            </Border.Background>

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="80" />
                </Grid.RowDefinitions>

                <!--  Barra superior  -->
                <Grid Background="#1a8586">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="30" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Margin="12,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="Cascadia Mono"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="CLIENTES FRECUENTES" />

                    <Button
                        Grid.Column="1"
                        Background="#d9534f"
                        BorderThickness="0"
                        Click="btnCerrar_Click"
                        Content="X"
                        Cursor="Hand"
                        FontWeight="Bold"
                        Foreground="White" />
                </Grid>

                <!--  Tabla de clientes  -->
                <DataGrid
                    x:Name="dgClientes"
                    Grid.Row="1"
                    Margin="15"
                    AlternatingRowBackground="#f3f3f3"
                    AutoGenerateColumns="False"
                    BorderBrush="#1a8586"
                    BorderThickness="2"
                    FontFamily="Cascadia Mono"
                    FontSize="14"
                    RowHeaderWidth="0"
                    SelectionMode="Single">

                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="80"
                            Binding="{Binding IdCliente}"
                            Header="ID" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Nombre}"
                            Header="Nombre" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Correo}"
                            Header="Correo" />
                        <DataGridTextColumn
                            Width="150"
                            Binding="{Binding Telefono}"
                            Header="Teléfono" />


                    </DataGrid.Columns>
                </DataGrid>

                <!--  Botones Acciones con emojis  -->
                <StackPanel
                    Grid.Row="2"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="150"
                        Height="40"
                        Background="#209c68"
                        BorderThickness="0"
                        Click="btnAñadir_Click"
                        Content="➕ Añadir Cliente"
                        Cursor="Hand"
                        FontFamily="Segoe UI Emoji"
                        Foreground="White" />
                    <Button
                        Width="150"
                        Height="40"
                        Margin="10,0,10,0"
                        Background="#f58c96"
                        BorderThickness="0"
                        Click="btnBorrar_Click"
                        Content="🗑 Borrar Cliente"
                        Cursor="Hand"
                        FontFamily="Segoe UI Emoji"
                        Foreground="White" />
                    <Button
                        Width="150"
                        Height="40"
                        Background="#1a8586"
                        BorderThickness="0"
                        Click="btnVolver_Click"
                        Content="← Regresar"
                        Cursor="Hand"
                        FontFamily="Segoe UI Emoji"
                        Foreground="White" />
                </StackPanel>

            </Grid>
        </Border>
    </Border>
</Window>
