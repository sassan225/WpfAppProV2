<Window x:Class="WpfAppProV2.Welcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Panel"
        Width="830"
        Height="480"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="20">

        <Border.Background>
            <ImageBrush ImageSource="/sources/backOf.jpg"/>
        </Border.Background>

        <Border BorderThickness="10" CornerRadius="20" Opacity="0.8">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,1">
                    <GradientStop Offset="0" Color="#1a8586"/>
                    <GradientStop Offset="0.3" Color="#B8C97A"/>
                    <GradientStop Offset="0.7" Color="#D7E2B8"/>
                    <GradientStop Offset="1" Color="#1a8586"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="#eaeace"/>
                    <GradientStop Offset="0.3" Color="#c5cf8a"/>
                    <GradientStop Offset="0.7" Color="#f3f3f3"/>
                    <GradientStop Offset="1" Color="#c5cf8a"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Barra superior -->
                <Grid Background="#1a8586">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="ADMIN PANEL"
                               FontFamily="Consolas"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"/>

                    <Button Grid.Column="1"
                            Content="X"
                            Click="BtnCerrar_Click"
                            Background="#d9534f"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </Grid>

                <!-- Contenido -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center">

                    <TextBlock Text="WELCOME!"
                               FontSize="38"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,35"
                               Foreground="#1a8586"/>

                    <!-- BOTONES DE OPCIONES -->
                    <StackPanel Width="350" HorizontalAlignment="Center" Orientation="Vertical">

                        <!-- Registrar producto -->
                        <Button x:Name="btnRegistrarProducto"
                                Content="➕ Registrar Producto"
                                Height="40"
                                FontFamily="Consolas"
                                Background="#1a8586"
                                Foreground="White"
                                Cursor="Hand"
                                BorderThickness="0"
                                FontSize="15"
                                Click="btnRegistrarProducto_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Opacity" Value="0.8"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="1"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Ver productos -->
                        <Button x:Name="btnVerProductos"
                                Content="📦 Ver Productos Registrados"
                                Height="40"
                                FontFamily="Consolas"
                                Background="#B8C97A"
                                Foreground="Black"
                                Cursor="Hand"
                                BorderThickness="0"
                                FontSize="15"
                                Click="btnVerProductos_Click">
                        </Button>

                        <!-- Cerrar sesión -->
                        <Button x:Name="btnCerrarSesion"
                                Content="⛔ Cerrar Sesión"
                                Height="40"
                                FontFamily="Consolas"
                                Background="#f58c96"
                                Foreground="White"
                                Cursor="Hand"
                                BorderThickness="0"
                                FontSize="15"
                                Click="btnCerrarSesion_Click"/>

                    </StackPanel>

                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
