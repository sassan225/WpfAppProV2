<Window x:Class="WpfAppProV2.RegistrarProveedor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegistrarProveedor" Height="450" Width="800"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="20">
        <Border.Background>
            <ImageBrush ImageSource="/sources/backOf.jpg"/>
        </Border.Background>

        <Border BorderThickness="10" CornerRadius="20" Opacity="0.8">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="#1a8586"/>
                    <GradientStop Offset="0.3" Color="#B8C97A"/>
                    <GradientStop Offset="0.7" Color="#D7E2B8"/>
                    <GradientStop Offset="1" Color="#1a8586"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Offset="0" Color="#eaeace"/>
                    <GradientStop Offset="0.3" Color="#c5cf8a"/>
                    <GradientStop Offset="0.7" Color="#f3f3f3"/>
                    <GradientStop Offset="1" Color="#c5cf8a"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top bar -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               FontFamily="Cascadia Mono"
                               FontSize="16"
                               Foreground="Black"
                               Text="REGISTRO DE PROVEEDORES"/>

                    <Button Grid.Column="1" Content="-" Background="#1a8586"
                            Foreground="White" Cursor="Hand"
                            Click="BtnMinimize_Click"/>

                    <Button Grid.Column="2" Content="X" Background="#f58c96"
                            Foreground="White" Cursor="Hand"
                            Click="BtnClose_Click"/>
                </Grid>

                <!-- Formulario -->
                <StackPanel Grid.Row="1" Margin="230,20,230,0">

                    <TextBlock FontFamily="Cascadia Mono"
                               FontSize="28"
                               HorizontalAlignment="Center"
                               Foreground="#1a8586"
                               Text="Nuevo Proveedor"/>

                    <TextBlock Margin="0,15,0,0" Text="Nombre Proveedor:"/>
                    <TextBox x:Name="txtNombreProveedor" Height="26" Margin="0,5,0,0"/>

                    <TextBlock Margin="0,15,0,0" Text="Contacto:"/>
                    <TextBox x:Name="txtContactoProveedor" Height="26" Margin="0,5,0,0"/>

                    <TextBlock Margin="0,15,0,0" Text="Ciudad:"/>
                    <TextBox x:Name="txtCiudadProveedor" Height="26" Margin="0,5,0,0"/>

                    <Button x:Name="btnGuardarProveedor"
                            Margin="0,25,0,0"
                            Background="#209c68"
                            Foreground="White"
                            Height="32"
                            Cursor="Hand"
                            Content="GUARDAR PROVEEDOR"
                            Click="btnGuardarProveedor_Click"/>

                    <Button Content="Back" Height="33" Width="186" Click="btnVolver_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
