<Window x:Class="WpfAppProV2.RegistrarAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Admin" Height="650" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        MouseDown="Window_MouseDown"> 

    <Border CornerRadius="20">
        <!-- Fondo -->
        <Border.Background>
            <ImageBrush ImageSource="/sources/backOf.jpg"/>
        </Border.Background>

        <!-- Borde con degradado -->
        <Border BorderThickness="10" CornerRadius="20" Opacity="0.9">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="#1a8586"/>
                    <GradientStop Offset="0.3" Color="#B8C97A"/>
                    <GradientStop Offset="0.7" Color="#D7E2B8"/>
                    <GradientStop Offset="1" Color="#1a8586"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Offset="0" Color="#eaeace"/>
                    <GradientStop Offset="0.3" Color="#c5cf8a"/>
                    <GradientStop Offset="0.7" Color="#f3f3f3"/>
                    <GradientStop Offset="1" Color="#c5cf8a"/>
                </LinearGradientBrush>
            </Border.Background>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="50">

                    <TextBlock Text="Registro de Nuevo Admin"
                               FontFamily="Segoe UI"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="#1a8586"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,20"/>

                    <!-- Nombre -->
                    <TextBlock Text="Nombre:" FontFamily="Segoe UI" FontSize="14" Margin="0,5,0,0"/>
                    <TextBox x:Name="txtNombre" Height="32" Padding="5" FontFamily="Segoe UI" FontSize="14"
                             BorderBrush="#1a8586" BorderThickness="2" Background="#F7F7F7"
                             TextChanged="txtNombre_TextChanged"/>

                    <!-- Apellido Paterno -->
                    <TextBlock Text="Apellido Paterno:" FontFamily="Segoe UI" FontSize="14" Margin="0,10,0,0"/>
                    <TextBox x:Name="txtApellidoP" Height="32" Padding="5" FontFamily="Segoe UI" FontSize="14"
                             BorderBrush="#1a8586" BorderThickness="2" Background="#F7F7F7"
                             TextChanged="txtApellidoP_TextChanged"/>

                    <!-- Apellido Materno -->
                    <TextBlock Text="Apellido Materno:" FontFamily="Segoe UI" FontSize="14" Margin="0,10,0,0"/>
                    <TextBox x:Name="txtApellidoM" Height="32" Padding="5" FontFamily="Segoe UI" FontSize="14"
                             BorderBrush="#1a8586" BorderThickness="2" Background="#F7F7F7"/>

                    <!-- Teléfono -->
                    <TextBlock Text="Teléfono:" FontFamily="Segoe UI" FontSize="14" Margin="0,10,0,0"/>
                    <TextBox x:Name="txtTelefono" Height="32" Padding="5" FontFamily="Segoe UI" FontSize="14"
                             BorderBrush="#1a8586" BorderThickness="2" Background="#F7F7F7"/>

                    <!-- Año de Nacimiento -->
                    <TextBlock Text="Año de Nacimiento:" FontFamily="Segoe UI" FontSize="14" Margin="0,10,0,0"/>
                    <TextBox x:Name="txtAnioNacimiento" Height="32" Padding="5" FontFamily="Segoe UI" FontSize="14"
                             BorderBrush="#1a8586" BorderThickness="2" Background="#F7F7F7"/>

                    <!-- Correo (generado automáticamente) -->
                    <TextBlock Text="Correo:" FontFamily="Segoe UI" FontSize="14" Margin="0,10,0,0"/>
                    <TextBox x:Name="txtCorreo" Height="32" Padding="5" FontFamily="Segoe UI" FontSize="14"
                             BorderBrush="#1a8586" BorderThickness="2" Background="#E0E0E0"
                             IsReadOnly="True"/>

                    <!-- Contraseña -->
                    <TextBlock Text="Contraseña:" FontFamily="Segoe UI" FontSize="14" Margin="0,10,0,0"/>
                    <PasswordBox x:Name="txtContrasena" Height="32" Padding="5"
                                 FontFamily="Segoe UI" FontSize="14"
                                 BorderBrush="#1a8586" BorderThickness="2"
                                 Background="#F7F7F7"/>

                    <!-- Botones -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button x:Name="btnGuardar"
                                Width="180" Height="40"
                                Background="#209c68" Foreground="White"
                                FontFamily="Segoe UI" FontWeight="Bold"
                                Click="btnGuardar_Click"
                                Margin="5"
                                Content="GUARDAR ADMIN"/>
                        <Button x:Name="btnVolver"
                                Width="180" Height="40"
                                Background="#c5cf8a" Foreground="Black"
                                FontFamily="Segoe UI" FontWeight="Bold"
                                Click="btnVolver_Click"
                                Margin="5"
                                Content="← REGRESAR"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Border>
</Window>
