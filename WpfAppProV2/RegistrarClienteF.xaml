<Window x:Class="WpfAppProV2.RegistrarClienteF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Cliente Frecuente"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="20">
        <Border.Background>
            <ImageBrush ImageSource="/sources/backOf.jpg"/>
        </Border.Background>

        <Border BorderThickness="10" CornerRadius="20" Opacity="0.9">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="#1a8586"/>
                    <GradientStop Offset="0.3" Color="#B8C97A"/>
                    <GradientStop Offset="0.7" Color="#D7E2B8"/>
                    <GradientStop Offset="1" Color="#1a8586"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Offset="0" Color="#eaeace"/>
                    <GradientStop Offset="0.3" Color="#c5cf8a"/>
                    <GradientStop Offset="0.7" Color="#f3f3f3"/>
                    <GradientStop Offset="1" Color="#c5cf8a"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top Bar -->
                <Grid Background="#1a8586">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               FontFamily="Cascadia Mono"
                               FontSize="16"
                               Foreground="White"
                               FontWeight="Bold"
                               Text="REGISTRO DE CLIENTE FRECUENTE"/>

                    <Button Grid.Column="1" Content="-" Background="#145757"
                            Foreground="White" Cursor="Hand"
                            Click="BtnMinimize_Click"/>

                    <Button Grid.Column="2" Content="X" Background="#f58c96"
                            Foreground="White" Cursor="Hand"
                            Click="BtnClose_Click"/>
                </Grid>

                <!-- Formulario -->
                <StackPanel Grid.Row="1" Margin="200,30,200,30" VerticalAlignment="Top">
                    <TextBlock FontFamily="Cascadia Mono"
                               FontSize="28"
                               HorizontalAlignment="Center"
                               Foreground="#1a8586"
                               Text="Nuevo Cliente"/>

                    <TextBlock Margin="0,15,0,0" Text="Nombre:"/>
                    <TextBox x:Name="txtNombre" Height="28" Margin="0,5,0,0"/>

                    <TextBlock Margin="0,15,0,0" Text="Correo Electrónico:"/>
                    <TextBox x:Name="txtCorreo" Height="28" Margin="0,5,0,0"/>

                    <TextBlock Margin="0,15,0,0" Text="Teléfono:"/>
                    <TextBox x:Name="txtTelefono" Height="28" Margin="0,5,0,0"/>

                    <Button x:Name="btnGuardar"
                            Margin="0,20,0,0"
                            Background="#209c68"
                            Foreground="White"
                            Height="36"
                            Cursor="Hand"
                            FontWeight="Bold"
                            Content="GUARDAR CLIENTE"
                            Click="btnGuardar_Click"/>

                    <Button Content="← REGRESAR"
                            Height="36"
                            Margin="0,10,0,0"
                            Background="#1a8586"
                            Foreground="White"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="btnVolver_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
