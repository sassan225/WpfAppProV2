<Window
    x:Class="WpfAppProV2.AdminPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Admin Panel"
    Width="830"
    Height="480"
    AllowsTransparency="True"
    Background="Transparent"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border CornerRadius="20">

        <Border.Background>
            <ImageBrush ImageSource="/sources/backOf.jpg" />
        </Border.Background>

        <Border
            BorderThickness="10"
            CornerRadius="20"
            Opacity="0.8">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,1">
                    <GradientStop Offset="0" Color="#1a8586" />
                    <GradientStop Offset="0.3" Color="#B8C97A" />
                    <GradientStop Offset="0.7" Color="#D7E2B8" />
                    <GradientStop Offset="1" Color="#1a8586" />
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="#eaeace" />
                    <GradientStop Offset="0.3" Color="#c5cf8a" />
                    <GradientStop Offset="0.7" Color="#f3f3f3" />
                    <GradientStop Offset="1" Color="#c5cf8a" />
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Barra superior  -->
                <Grid Background="#1a8586">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="30" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Margin="12,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="Consolas"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="ADMIN PANEL" />

                    <Button
                        Grid.Column="1"
                        Background="#d9534f"
                        BorderThickness="0"
                        Click="BtnCerrar_Click"
                        Content="X"
                        Cursor="Hand"
                        FontWeight="Bold"
                        Foreground="White" />
                </Grid>

                <!--  Contenido  -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center">

                    <TextBlock
                        Margin="0,0,0,35"
                        HorizontalAlignment="Center"
                        FontSize="38"
                        FontWeight="Bold"
                        Foreground="#1a8586"
                        Text="WELCOME!" />

                    <StackPanel
                        Width="350"
                        HorizontalAlignment="Center"
                        Orientation="Vertical">

                        <!--  Registrar producto  -->
                        <Button
                            x:Name="btnRegistrarProducto"
                            Height="40"
                            Background="#1a8586"
                            BorderThickness="0"
                            Click="btnRegistrarProducto_Click"
                            Content="➕ Registrar Producto"
                            Cursor="Hand"
                            FontFamily="Consolas"
                            FontSize="15"
                            Foreground="White">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Opacity" Value="0.8" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="1" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!--  Registrar proveedor  -->
                        <Button
                            x:Name="btnRegistrarProveedor"
                            Height="40"
                            Margin="0,5,0,0"
                            Background="#6fa8dc"
                            BorderThickness="0"
                            Click="btnRegistrarProveedor_Click"
                            Content="➕ Registrar Proveedor"
                            Cursor="Hand"
                            FontFamily="Consolas"
                            FontSize="15"
                            Foreground="White" />

                        <!--  Ver productos  -->
                        <Button
                            x:Name="btnVerProductos"
                            Height="40"
                            Margin="0,5,0,0"
                            Background="#B8C97A"
                            BorderThickness="0"
                            Click="btnVerProductos_Click"
                            Content="📦 Ver Productos Registrados"
                            Cursor="Hand"
                            FontFamily="Consolas"
                            FontSize="15"
                            Foreground="Black" />

                        <!--  Ver proveedores  -->
                        <Button
                            x:Name="btnVerProveedores"
                            Height="40"
                            Margin="0,5,0,0"
                            Background="#8ac6d1"
                            BorderThickness="0"
                            Click="btnVerProveedores_Click"
                            Content="👤 Ver Proveedores Registrados"
                            Cursor="Hand"
                            FontFamily="Consolas"
                            FontSize="15"
                            Foreground="Black" />

                        <!--  Cerrar sesión  -->
                        <Button
                            x:Name="btnCerrarSesion"
                            Height="40"
                            Margin="0,5,0,0"
                            Background="#f58c96"
                            BorderThickness="0"
                            Click="btnCerrarSesion_Click"
                            Content="⛔ Cerrar Sesión"
                            Cursor="Hand"
                            FontFamily="Consolas"
                            FontSize="15"
                            Foreground="White" />
                    </StackPanel>

                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
