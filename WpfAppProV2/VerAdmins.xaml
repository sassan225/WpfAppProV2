<Window
    x:Class="WpfAppProV2.VerAdmins"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Administradores Registrados"
    Width="830"
    Height="520"
    AllowsTransparency="True"
    Background="Transparent"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border CornerRadius="20">
        <!--  Fondo  -->
        <Border.Background>
            <ImageBrush ImageSource="/sources/backOf.jpg" />
        </Border.Background>

        <!--  Borde principal  -->
        <Border
            BorderThickness="10"
            CornerRadius="20"
            Opacity="0.9">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="#1a8586" />
                    <GradientStop Offset="0.3" Color="#B8C97A" />
                    <GradientStop Offset="0.7" Color="#D7E2B8" />
                    <GradientStop Offset="1" Color="#1a8586" />
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Offset="0" Color="#eaeace" />
                    <GradientStop Offset="0.3" Color="#c5cf8a" />
                    <GradientStop Offset="0.7" Color="#f3f3f3" />
                    <GradientStop Offset="1" Color="#c5cf8a" />
                </LinearGradientBrush>
            </Border.Background>

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="45" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="80" />
                </Grid.RowDefinitions>

                <!--  Barra superior  -->
                <Grid Background="#1a8586">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="35" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Margin="15,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="Consolas"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="ADMINISTRADORES" />

                    <Button
                        Grid.Column="1"
                        Background="#d9534f"
                        BorderThickness="0"
                        Click="btnCerrar_Click"
                        Content="X"
                        Cursor="Hand"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White" />
                </Grid>

                <DataGrid
                    x:Name="dgAdmins"
                    Grid.Row="1"
                    AlternatingRowBackground="#f3f3f3"
                    AutoGenerateColumns="False"
                    BorderBrush="#1a8586"
                    BorderThickness="2"
                    CanUserAddRows="False"
                    CanUserResizeRows="False"
                    FontFamily="Cascadia Mono"
                    FontSize="14"
                    HeadersVisibility="Column"
                    RowHeaderWidth="0"
                    RowHeight="30"
                    SelectionMode="Single">

                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="60"
                            Binding="{Binding IdAdmin}"
                            Header="ID" />
                        <DataGridTextColumn
                            Width="2*"
                            Binding="{Binding NombreCompleto}"
                            Header="Nombre Completo" />
                        <DataGridTextColumn
                            Width="2*"
                            Binding="{Binding Correo}"
                            Header="Correo" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Telefono}"
                            Header="Teléfono" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding AnioNacimiento}"
                            Header="Año Nacimiento" />
                    </DataGrid.Columns>
                </DataGrid>

                <!--  Botones acciones  -->
                <StackPanel
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="180"
                        Height="45"
                        Background="#1a8586"
                        BorderThickness="0"
                        Click="btnVolver_Click"
                        Cursor="Hand"
                        FontFamily="Consolas"
                        FontWeight="Bold"
                        Foreground="White">
                        ← REGRESAR
                    </Button>

                    <Button
                        Width="180"
                        Height="45"
                        Margin="10,0"
                        Background="#209c68"
                        BorderThickness="0"
                        Click="btnAñadir_Click"
                        Cursor="Hand"
                        FontFamily="Consolas"
                        FontWeight="Bold"
                        Foreground="White">
                        ➕ Añadir Admin
                    </Button>

                    <Button
                        Width="180"
                        Height="45"
                        Background="#f58c96"
                        BorderThickness="0"
                        Click="btnBorrar_Click"
                        Cursor="Hand"
                        FontFamily="Consolas"
                        FontWeight="Bold"
                        Foreground="White">
                        🗑 Borrar Admin
                    </Button>
                </StackPanel>

            </Grid>
        </Border>
    </Border>
</Window>
