<Window
    x:Class="WpfAppProV2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfAppProV2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="510"
    AllowsTransparency="True"
    Background="Transparent"
    MouseDown="Window_MouseDown"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">


    <Border CornerRadius="20">
        <Border.Background>
            <ImageBrush ImageSource="/sources/backOf.jpg" />
        </Border.Background>
        <Border
            BorderThickness="10"
            CornerRadius="20"
            Opacity="0.8">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="#1a8586" />

                    <GradientStop Offset="0.3" Color="#B8C97A" />

                    <GradientStop Offset="7" Color="#D7E2B8" />

                    <GradientStop Offset="1" Color="#1a8586" />

                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Offset="0" Color="#eaeace" />

                    <GradientStop Offset="0.3" Color="#c5cf8a" />

                    <GradientStop Offset="0.7" Color="#f3f3f3" />

                    <GradientStop Offset="1" Color="#c5cf8a" />

                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="25" />
                        <ColumnDefinition Width="25" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="Cascadia Mono"
                        Foreground="Black"
                        Text="LOG IN V.1.0.0" />

                    <Button
                        x:Name="btnMinimizar"
                        Grid.Column="1"
                        Background="#1a8586"
                        Click="btnMinimizar_Click"
                        Content="-"
                        Cursor="Hand"
                        Foreground="White" />

                    <Button
                        x:Name="btnCerrar"
                        Grid.Column="2"
                        Background="#f58c96"
                        Click="btnCerrar_Click"
                        Content="X"
                        Cursor="Hand"
                        Foreground="White" />





                </Grid>
                <StackPanel
                    Grid.Row="1"
                    Margin="272,10,252,10"
                    Orientation="Vertical">
                    <Image
                        Width="220"
                        Height="178"
                        Source="/sources/iconPf3.png" />
                    <TextBlock
                        Margin="0,-20,0,0"
                        HorizontalAlignment="Center"
                        FontFamily="Cascadia Mono"
                        FontSize="32"
                        Foreground="#1a8586"
                        Text="LOG IN" />


                    <!--  BOTON DE USUARIO  -->

                    <TextBlock
                        Margin="10,20,0,0"
                        FontFamily="Cascadia Mono"
                        FontSize="15"
                        Foreground="#4d374d"
                        Text="Username: " />
                    <TextBox
                        x:Name="txtUser"
                        Height="28"
                        Margin="0,5,0,0"
                        Padding="40,0,0,0"
                        VerticalContentAlignment="Center"
                        BorderBrush="DarkGray"
                        BorderThickness="0,0,0,1"
                        CaretBrush="LightBlue"
                        FontFamily="Cascadia Mono"
                        FontSize="13"
                        FontWeight="Medium"
                        Foreground="Black">

                        <TextBox.Background>
                            <ImageBrush
                                AlignmentX="Left"
                                ImageSource="/sources/tyni-logo-user-nb.png"
                                Stretch="None" />
                        </TextBox.Background>

                    </TextBox>

                    <!--  BOTON DE CONTRASEÑA  -->
                    <TextBlock
                        Margin="10,20,0,0"
                        FontFamily="Cascadia Mono"
                        FontSize="15"
                        Foreground="#4d374d"
                        Text="Password: " />
                    <PasswordBox
                        x:Name="txtpass"
                        Height="28"
                        Margin="0,5,0,0"
                        Padding="40,0,0,0"
                        VerticalContentAlignment="Center"
                        BorderBrush="DarkGray"
                        BorderThickness="0,0,0,1"
                        CaretBrush="LightBlue"
                        FontFamily="Cascadia Mono"
                        FontSize="13"
                        FontWeight="Medium"
                        Foreground="Black">

                        <PasswordBox.Background>
                            <ImageBrush
                                AlignmentX="Left"
                                ImageSource="/sources/tiny-key.png"
                                Stretch="None" />
                        </PasswordBox.Background>

                    </PasswordBox>

                    <Button
                        Style="{x:Null}"
                        x:Name="btnLogin"
                        Grid.Column="1"
                        Width="80"
                        Height="26"
                        Margin="0,20,0,0"
                        Background="#209c68"
                        Click="btnLogin_Click"
                        Content="LOG IN"
                        Cursor="Hand"
                        FontFamily="Cascadia Mono"
                        Foreground="White" />

                    <Label Margin="0,10,0,0" Content="Dont have an acount?" />
                    <Button
                        Width="100"
                        Margin="120,-20,0,0"
                        Click="btnSignUp_Click"
                        Content="Press here"
                        Cursor="Hand"
                        FontFamily="Cascadia Mono" />



                </StackPanel>
            </Grid>


        </Border>
    </Border>
</Window>
