<Window
    x:Class="WpfAppProV2.PanelSuperAdmin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Panel Super Admin"
    Width="950"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    WindowStyle="None"
    MouseDown="Window_MouseDown"    
    >

    <Border>
        <Border.Background>
            <ImageBrush ImageSource="/sources/FondoAdmin.jpg"/>
        </Border.Background>

    <Border CornerRadius="20" BorderThickness="2" BorderBrush="#1a8586">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Barra superior -->
            <Grid Background="#1a8586">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="SUPER ADMIN PANEL"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           FontFamily="Consolas"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"/>
                <Button Grid.Column="1"
                        Content="X"
                        Background="#e94560"
                        BorderThickness="0"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="btnClose_Click" Height="35" VerticalAlignment="Top"/>
            </Grid>

            <!-- Contenido central -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">

                <TextBlock 
                           Foreground="White"   
                           FontSize="32" 
                           FontWeight="Bold" 
                       
                           HorizontalAlignment="Center"><Run Language="es-bo" Text=" BIENVENIDO GERENTE!"/></TextBlock>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="400">

                    <!-- Botones grandes estilo pro -->
                    <Button x:Name="btnAdmins" Content="👤 Administradores" Height="60" FontSize="20" 
                            Background="#162447" Foreground="White" BorderThickness="0" Cursor="Hand"
                            Click="BtnAdmins_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="0.85"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="1"/>
                                        <Setter Property="Background" Value="#1f4068"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="btnProveedores" Content="🛒 Proveedores" Height="60" FontSize="20"
                            Background="#209c68" Foreground="White" BorderThickness="0" Cursor="Hand"
                            Click="BtnProveedores_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="0.85"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="1"/>
                                        <Setter Property="Background" Value="#28b485"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="btnInventario" Content="📦 Inventario" Height="60" FontSize="20"
                            Background="#6fa8dc" Foreground="White" BorderThickness="0" Cursor="Hand"
                            Click="BtnInventario_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="0.85"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="1"/>
                                        <Setter Property="Background" Value="#82c0f2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="btnClientes" Content="🏆 Clientes Frecuentes" Height="60" FontSize="20"
                            Background="#f2b705" Foreground="White" BorderThickness="0" Cursor="Hand" Click="btnClientes_Click_1"
                            >
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="0.85"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="1"/>
                                        <Setter Property="Background" Value="#ffcf33"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="btnCerrarSesion" Content="⛔ Cerrar Sesión" Height="60" FontSize="20"
                            Background="#e94560" Foreground="White" BorderThickness="0" Cursor="Hand"
                            Click="BtnLogout_Click"/>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>
    </Border>
</Window>
